<table>
  <tr>
    <td>来自非洲的阴阳师</td>
    <td>非酋指数</td>
  </tr>
  <% bloodlines.each do |bl| %>
    <tr>
      <td><%= bl.name %></td>
      <td>&nbsp;&nbsp;<span title="<%= bl.remark %>"><%= bl.total_score %></span></td>
      <td>
        <% if bl.title.present? %>
          <% bl.title.split(',').uniq.compact.each do |title| %>
            <span class="badge badge-dark"><%= title %></span>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

