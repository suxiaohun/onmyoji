<style type="text/css">

  td{
    /*border: 1px solid black;*/
    text-align: left;
    text-indent: 20px;
    line-height: 30px;
  }
  select {
    height: 36px;
    width: 112px;
    text-indent: 4px;
    margin-bottom: 15px;
  }

  input[type='checkbox'],input[type='radio']{
    height: 30px;
    width: 30px;
  }
  .checkbox_text{
    font-size: 30px;
    line-height: 30px;
    vertical-align: top;
    padding-left: 10px;
  }
  .ssr_text{
    color: rgb(232,112,30);
    font-size: 24px;
    line-height: 30px;
    vertical-align: top;
    padding-left: 10px;
  }
  .sp_text{
    color: rgb(248,45,58);
    font-size: 24px;
    line-height: 30px;
    vertical-align: top;
    padding-left: 10px;
  }


  .text_tag {
    /*display: block;*/
    width: 150px;
    height: 54px;
    padding: 6px 12px;
    font-size: 30px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  }

</style>


<div style="padding-top: 100px;text-align: center;">
  <%= form_tag('/yys2/summon', method: :post,remote: true) do %>

    <table>
      <tr>
        <td>
          <%= image_tag image_path 'card' %><%= number_field_tag 'number', 200, required: true,:max=>@max_count, :class => 'text_tag',required: true %>
          <%= image_tag image_path('tip'),size: "32",title:"输入你要抽取的数量，最大"+@max_count.to_s+"抽" %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= check_box_tag 'mode' %><span class="checkbox_text">全图鉴</span></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= check_box_tag 'up' %><span class="checkbox_text">三次up</span>
          <%= image_tag image_path('tip'),size: "32",title:'召唤期内使用神秘的符咒进行召唤时，SP/SSR式神出现概率提升至原来的2.5倍！每位阴阳师大人享受3次SP/SSR概率UP的机会。',style: 'vertical-align:top;' %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= radio_button_tag 'spec_up', 'SSR', false %><span class="checkbox_text">SSR阶指定概率up<span class="ssr_text">泷夜叉姬</span></span></td>
      </tr>
      <tr>
        <td colspan="2"><%= radio_button_tag 'spec_up', 'SP', false %><span class="checkbox_text">SP阶指定概率up<span class="sp_text">鬼王酒吞童子</span></span></td>
      </tr>
      <tr>
        <td colspan="2"> <%= submit_tag '召唤', :class => 'btn btn-primary' %></td>
      </tr>
    </table>
  <% end %>
</div>
<hr>
<div id="result">
</div>












