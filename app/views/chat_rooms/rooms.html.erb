<script type="text/javascript">


    $(function () {
        subscript();
        $(function () {
            tinymce.init({
                selector: 'textarea#DataToSend',
                menubar: false,
                toolbar: 'undo redo | bold italic forecolor',
                init_instance_callback: function (editor) {
                    editor.on('keydown', function (e) {
                        if (e.keyCode == 13) {
                            $("#SendData").click();
                            e.preventDefault();
                        }
                    });
                }
            })
        });


    });


</script>
<div id="chatRoom">
  <div style="text-align: center;">
    <button id="chat_btn" chat="0" sama="1" class="std" type="button" onclick="subscript()">加入聊天室</button>
  </div>


  <div id='LogContainer' class="log">

  </div>

  <div id='SendDataContainer' class="send_container">

    <%= text_area_tag :DataToSend, "", :class => "tinymce", :rows => 10, :cols => 120 %>
    <%#= tinymce :alternate %>

    <button id='SendData' type="button" onclick="send_message()">发送</button>


  </div>

</div>


