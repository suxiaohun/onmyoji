<script type="text/javascript">
    $(function () {

        tinymce.init({
            selector: 'textarea#DataToSend',
            menubar: false,
            toolbar: 'undo redo | bold italic forecolor',
            init_instance_callback: function (editor) {
                editor.on('keydown', function (e) {
                    if (e.keyCode == 13) {
                        $("#SendData").click();
                        e.preventDefault();
                    }
                });
            }
        })

        $("#DataToSend").keypress(function (evt) {
            if (evt.keyCode == 13) {
                $("#SendData").click();
                evt.preventDefault();
            }
        })
    });

</script>
